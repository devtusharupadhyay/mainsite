@page "/channel/{Id:int}"
@page "/mainsite/channel/{Id:int}"
@layout EmptyLayout

<div class="tr-vh-100">

    <div class="row mx-auto">
        <div class="col-12 col-lg-2">
            <div class="pt-4 text-center">
                <h6 class="mb-0"><b>Now Watching</b></h6>
                <h3 class="tr-fcblue"><b>Happier</b></h3>
            </div>
        </div>
        <div class="col-12 col-lg-10">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-3 p-0 border border-5 @(ActiveChannel == Tabs.Channel1? "tr-header-channel-selected": "ts-grey" )">
                    <a href="/mainsite/channel/1" class="text-center p-3 ">
                        <h5 class="mb-0 @(ActiveChannel == Tabs.Channel1? "text-white": "" )">Channel1 <span class="bg-danger text-white">LIVE</span> </h5>
                        <div class="tr-fs13 @(ActiveChannel == Tabs.Channel1? "text-white": "" )">Understanding burn out</div>
                        <div class="tr-suffix @(ActiveChannel == Tabs.Channel1? "text-white": "" )">Deliverd by mental health at work</div>
                    </a>

                </div>
                <div class="col-sm-12 col-md-6 col-lg-3 p-0 ts-grey border border-5 @(ActiveChannel == Tabs.Channel2? "tr-header-channel-selected": "ts-grey" )">
                    <a href="/mainsite/channel/2" class="text-center p-3 ">
                        <h5 class="mb-0 @(ActiveChannel == Tabs.Channel2? "text-white": "" )">Channel2 <span class="bg-danger text-white">LIVE</span> </h5>
                        <div class="tr-fs13 @(ActiveChannel == Tabs.Channel2? "text-white": "" )">Supporting your colleagues with mental health</div>
                        <div class="tr-suffix @(ActiveChannel == Tabs.Channel2? "text-white": "" )">Deliverd by IPRS</div>
                    </a>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-3 p-0 ts-grey border border-5 @(ActiveChannel == Tabs.Channel3? "tr-header-channel-selected": "ts-grey" )">
                    <a href="/mainsite/channel/3" class="text-center p-3 ">
                        <h5 class="mb-0 @(ActiveChannel == Tabs.Channel3? "text-white": "" )">Channel3 <span class="bg-danger text-white">LIVE</span> </h5>
                        <div class="tr-fs13 @(ActiveChannel == Tabs.Channel3? "text-white": "" )">Re-set yourself with a mindfullness workshop </div>
                        <div class="tr-suffix @(ActiveChannel == Tabs.Channel3? "text-white": "" )">Deliverd by IPRS</div>
                    </a>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-3 p-0 ts-grey border border-5 @(ActiveChannel == Tabs.Channel4? "tr-header-channel-selected": "ts-grey" )">
                    <a href="/mainsite/channel/4" class="text-center p-3 ">
